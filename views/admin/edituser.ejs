<%- include('../layouts/header.ejs') %>


<div class="container">
    <div class="row">
        <div class="col-12 col-md-12 col-lg-12">

            <h1>User edit page</h1>


<form action="" method="post" >


    
    <label for="">Enter your email</label><br><br>
    <input type="email" name="email" required value="<%= user.email %>"><br><br>

   

    <label for="">Enter your new name</label><br><br>
    <input type="text" name="name" required value="<%= user.name %>"><br><br>

    <label for="">Enter your mobile</label><br><br>
    <input type="number" name="mobile" required value="<%= user.mobile %>" pattern="[0-9]{10}"><br><br>


    <input type="hidden" name="id" value="<%= user._id %>">
    <button type="submit" value="">update user</button>



    
</form>

 
        </div>
    </div>
</div>







