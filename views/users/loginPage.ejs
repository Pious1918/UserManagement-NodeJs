<%- include('../layouts/header.ejs') %>


<body class="bg-dark">
    
    <section>
        <div class="container">
            <div class="row">
                <div class="col-12 col-md-12 col lg-12 p-3 mt-5">

                    <div class="loginbox text-center text-light border border-primary-subtle p-3">
                        <h1>Welcome to the login page</h1>

                        <% if(typeof message !== 'undefined'){
                        
                            %>
                        
                            <h4><%= message %></h4>
                        
                            <%
                        } 
                        
                        %>
                        
                        <form action="/login" method="post">
                        
                            <label for="">Enter your email</label><br><br>
                            <input type="email" name="email" required><br><br>
                        
                            <label for="">Enter your password</label><br><br>
                            <input type="password" name="password" required><br><br>
                        
                            <button type="submit">Login</button>
                        
                            
                        
                        </form> 
                        <button type="button" class="btn btn-light mt-1 "><a href="/" style="text-decoration: none;">Back to Welcome page</a></button>

                       


                    </div>
                   
                    
                    

                </div>
            </div>
        </div>
    </section>

</body>








